# ===========================================
# Environment Variables Template
# Web Search Scripts - Brave & Linkup
# ===========================================
# Copy this file to .env and fill in your actual API keys
# NEVER commit the .env file with real keys!

# -------------------------------------------
# Brave Search API Key
# -------------------------------------------
# Get your free key from: https://api-dashboard.search.brave.com/
# Free tier: 2,000 queries/month
BRAVE_API_KEY=your-brave-api-key-here

# -------------------------------------------
# Linkup Search API Key  
# -------------------------------------------
# Get your free key from: https://app.linkup.so/
# Check pricing at: https://linkup.so/pricing
LINKUP_API_KEY=your-linkup-api-key-here

# -------------------------------------------
# Optional Configuration
# -------------------------------------------

# Default number of results for searches
DEFAULT_NUM_RESULTS=10

# Default search depth for Linkup (standard or deep)
DEFAULT_LINKUP_DEPTH=standard

# Timeout in seconds for API requests
SEARCH_TIMEOUT=30
DEEP_SEARCH_TIMEOUT=60

# Cache directory for search results (optional)
CACHE_DIR=./cache

# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
